<?xml version="1.0" encoding="utf-8"?><!--@author Valentin Scheibe-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:id="@+id/homeFragment_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/joinCampaignEditText"
                style="@style/editTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="CampaignID"
                android:inputType="number" />

            <EditText
                android:id="@+id/joinCampaignCharacterText"
                style="@style/editTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="Character Name"
                android:inputType="text" />

            <Button
                android:id="@+id/joinCampaignButton"
                style="@style/diceButtons"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="6dp"
                android:text="Join Campaign" />

            <EditText
                android:id="@+id/createCampaignEditText"
                style="@style/editTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="Campaign Name"
                android:inputType="text"
                android:maxLength="30" />

            <Button
                android:id="@+id/createCampaignButton"
                style="@style/diceButtons"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="6dp"
                android:text="Create Campaign" />

            <EditText
                android:id="@+id/deleteCampaignEditText"
                style="@style/editTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="CampaignID"
                android:inputType="number" />

            <Button
                android:id="@+id/deleteCampaignButton"
                style="@style/diceButtons"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="6dp"
                android:text="Delete Campaign" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:src="@drawable/d20_all" />

                <Button
                    android:id="@+id/navigateToRollDiceButton"
                    style="@style/diceButtons"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:text="Roll Dice"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>â—™
    </ScrollView>


</RelativeLayout>