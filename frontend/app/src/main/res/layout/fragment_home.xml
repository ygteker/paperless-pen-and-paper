<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:padding="12dp">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="This is the home fragment."
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="null"
        android:textAlignment="center"
        android:layout_below="@id/text_home"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_id_text"
        android:orientation="vertical">


        <EditText
            android:id="@+id/joinCampaignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CampaignID"
            android:inputType="number" />

        <Button
            android:id="@+id/joinCampaignButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Campaign" />

        <EditText
            android:id="@+id/createCampaignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Campaign Name"
            android:inputType="text" />

        <Button
            android:id="@+id/createCampaignButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Campaign" />

        <EditText
            android:id="@+id/deleteCampaignEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CampaignID"
            android:inputType="number" />

        <Button
            android:id="@+id/deleteCampaignButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Campaign" />


    </LinearLayout>

</RelativeLayout>