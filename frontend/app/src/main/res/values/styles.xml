<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonTheme" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/space_cadet</item>
        <item name="backgroundTint">@color/silver_pink</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="editTextTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/heliotrope_gray</item>
        <item name="android:textColor">@color/space_cadet</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="navBarTheme" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/silver_pink</item>
        <item name="itemIconTint">@color/space_cadet</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>